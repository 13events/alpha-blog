<h1 align='center'>
  Log in
</h1>

<div class='row'>
	<div class="col-sm-12">
		<%= form_for :session,
                 :html => {class: 'form-horizontal', rule: 'form'},
                  url: login_path do |f| %>

			<!-- Email label and email field --->
			<div class='form-group'>
				<div class='col-sm-1 control-label col-sm-offset-3'>
					<%= f.label 'email:' %>
				</div>
				<div class='col-sm-4'>
					<%= f.email_field :email, 
                            class: 'form-control',
						                placeholder: "Enter email",
                            autofocus: true,
                            autocomplete: 'off' %>
				</div>
			</div>

			<!-- password label and password_field. --->
			<div class='form-group'>
				<div class='col-sm-1 control-label col-sm-offset-3'>
					<%= f.label :password %>
				</div>
				<div class='col-sm-4'>
					<%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
				</div>
			</div>

			<!--- Login Button --->
			<div class='form-group'>
				<div class="col-sm-1 col-sm-offset-4">
					<%= f.submit "Log In", class: 'btn btn-primary btn-md'%>
				</div>
				<div class="col-sm-1">
					<%= link_to 'Cancel',root_path, class: 'btn btn-md btn-secondary' %>
				</div>
			</div>

			<% end %> 
	</div>
</div>	
