
<h2 align="center"><%= @article.title %></h2>

<div class="well col-xs-8 col-xs-offset-2 center">
  <% if @article.user %>
    <ul class='listing'>
        <div class='row center'>
          <div class='col-xs-4 col-xs-offset-4'>
            <li><strong>Author</strong></li>
            <li>
              <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
            <li>

            <li class='article-title'>
              <%= link_to @article.user.username, user_path(@article.user) %>
            </li>

            <li>
              <small>
                <%= pluralize(@article.user.articles.count, "article")%>
              </small>
            </li>
          </div>
        </div>
      </ul>
    <% end %>
	<h5><%= simple_format(@article.description) %></h5>
	<div class="article-actions col-xs-12 center">
    <% if current_user == @article.user%>
      <%= link_to "Edit this article", edit_article_path(@article), class:"btn btn-xs btn-primary"%>
      <%= link_to 'Delete article', article_path(@article), method: :delete,
                                    data: {confirm: "Are you sure you want to delete this article?"}, 
                                    class: "btn btn-xs btn-danger" %>
    <% end  %>
      <%= link_to "Back to articles listing", articles_path, class: "btn btn-xs btn-success" %>
    
	</div>

</div>

