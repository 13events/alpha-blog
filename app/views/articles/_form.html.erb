<% if @article.errors.any? %>
<h2>The following errors prevented the article from being created.</h2>
	<ul>
		<% @article.errors.full_messages.each do |msg|%>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<div class='row'>
	<div class="col-sm-12">
		<%= form_for @article, :html => {class: 'form-horizontal', rule: 'form'} do |f| %>

			<!-- Title label and text field --->
			<div class='form-group'>
				<div class='col-sm-1 control-label'>
					<%= f.label :title %>
				</div>
				<div class='col-xs-8 col-xs-offset-1'>
					<%= f.text_field :title, class: 'form-control',
						placeholder: "Article Title", autofocus: true %>
				</div>
			</div>

			<!-- description label and text field. --->
			<div class='form-group'>
				<div class='col-xs-1 control-label'>
					<%= f.label :description %>
				</div>
				<div class='col-xs-offset-1 col-xs-8 '>
					<%= f.text_area :description, class: 'form-control',
						placeholder: "Article Body",rows: 10 %>
				</div>
			</div>

			<!--- Submit Button --->
			<div class='form-group'>
				<div class="col-xs-offset-2 col-xs-1">
					<%= f.submit class: 'btn btn-primary btn-md'%>
				</div>
				<div class="col-xs-offset-9">
					<%= link_to 'Cancel',articles_path, class: 'btn btn-md btn-secondary' %>
				</div>
			</div>

			<% end %> 
	</div>
</div>	
